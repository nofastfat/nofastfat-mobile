<?xml version="1.0" encoding="utf-8"?>
<mx:ApplicationControlBar xmlns:fx="http://ns.adobe.com/mxml/2009"
						  xmlns:s="library://ns.adobe.com/flex/spark"
						  xmlns:mx="library://ns.adobe.com/flex/mx"
						  width="626"
						  height="102"
						  fontFamily="微软雅黑"
						  fontSize="14">
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		@namespace mx "library://ns.adobe.com/flex/mx";
			
	</fx:Style>
	<s:Group width="100%"
			 height="100%">
		<s:Label id="nameTf"
				 x="151"
				 y="57"
				 text="洛克萨斯之手"/>
		<mx:LinkButton id="logoutTf"
					   x="241"
					   y="52"
					   label="注销"
					   color="#0000FF"
					   rollOverColor="#EC8428"
					   selectionColor="#A8C9FA"
					   textDecoration="underline"/>
		<s:Image x="10"
				 y="10"
				 source="@Embed('../assets/logo.png')"/>
		<s:Label id="goods"
				 x="292"
				 y="57"
				 height="15"
				 text=""/>
		<mx:LinkButton x="368"
					   y="52"
					   label="退订"
					   color="#0000FF"
					   id="redng"
					   rollOverColor="#EC8428"
					   selectionColor="#A8C9FA"
					   textDecoration="underline"/>
	</s:Group>
	<fx:Script>
		<![CDATA[
			import com.xy.model.Global;

			public function setName(name : String) : void {
				if (!Global.isAdmin) {
					nameTf.text = name;
					goods.text = "中午已经订 青椒肉丝(10元)";
					redng.visible = true;
				} else {
					nameTf.text = "管理员："+name;
					goods.text = "";
					redng.visible = false;
				}

				callLater(function() : void {
					logoutTf.x = nameTf.x + nameTf.width + 10;
					goods.x = logoutTf.x + logoutTf.width + 10;
					redng.x = goods.x + goods.width + 10;
				});
			}
		]]>
	</fx:Script>
</mx:ApplicationControlBar>
